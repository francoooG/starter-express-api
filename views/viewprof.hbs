<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="viewprof.css">
        <link rel="stylesheet" href="navbar.css">
    </head>

    <body>
			{{#with professorData}}
			<div class="container">

				<div class="upper">
					<div class="left-side">
						<div class="user-dp"></div>
					</div>
		
					<div class="right-side">
						<div class="right-side-bio">
							<div class="row1">
								<div class="bio-username">
									<h2>Username</h2>
									<span class="profname">{{aProfessor.title}} {{aProfessor.lastname}}</span>
								</div>
							</div>
							<div class="starting-term">
								<h2>Starting Term</h2>
								<span class="startterm">{{aProfessor.sterm}}</span>
							</div>
							<div class="bio-text">
								<h2>Bio</h2>
								<p class="bio">{{aProfessor.bio}}</p>
							</div>
						</div>
					</div>
				</div>
		{{/with}}
		<h1 class="reviewheader">Reviews</h1>
			{{#each postData}}
				<div class="lower">
					<div class="review-box">
						<div class="review-box-upper">
							<div class="review-dp" id="review"></div>
								<a class="username" href="/viewuser?id={{op}}">{{opname}}</a>
								<span class="course-term">[{{course}}]</span>
							</div>
						<div class="review-box-main">
							<p class="review">{{aPost.text}}</p>
						</div>
					</div>
			
				</div>
			{{/each}}
		</div>
			
		<div id="navbar">
				<a class="mainpage" href="/">Profdex</a>
				<span class="navbar-buttons">
					<a class="menu" href="/editprofile">About Me</a>
					<a class="menu" href="/createpost">Create Review</a>
					<a class="menu" href="/help">Help</a>
				</span>
				<span class="search-buttons">
					{{#if loggedInUser}}
						<a class="login-button" href="/logout">Logout</a>
					{{else}}
						<a class="login-button" href="/login">Login</a>
					{{/if}}
					<form action="/viewprof" method="post">
						<input type="text" class="search" id="search" name="search" placeholder="Professor Full Name">
						<button type="submit" id="searchbutton"></button>
					</form>
				</span>
			</div>
</body>
</html>